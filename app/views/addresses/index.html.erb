<h1>Listing addresses</h1>

<table>
  <thead>
    <tr>
      <th>Address1</th>
      <th>Address2</th>
      <th>City</th>
      <th>County</th>
      <th>State prov</th>
      <th>Zip code</th>
      <th>Country</th>
      <th>Addressable type</th>
      <th>Addressable</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @addresses.each do |address| %>
      <tr>
        <td><%= address.address1 %></td>
        <td><%= address.address2 %></td>
        <td><%= address.city %></td>
        <td><%= address.county %></td>
        <td><%= address.state_prov %></td>
        <td><%= address.zip_code %></td>
        <td><%= address.country %></td>
        <td><%= address.addressable_type %></td>
        <td><%= address.addressable_id %></td>
        <td><%= link_to 'Show', address %></td>
        <td><%= link_to 'Edit', edit_address_path(address) %></td>
        <td><%= link_to 'Destroy', address, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Address', new_address_path %>
